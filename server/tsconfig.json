{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "es6",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["src", "typings"]
}
